# AI Weather Assistant - Environment Variables
# Copy this file to `.env` and fill in your own keys/values.

# --- OpenAI ---
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# --- LangSmith (Tracing & Monitoring) ---
LANGSMITH_API_KEY=
LANGSMITH_TRACING=true
LANGSMITH_PROJECT=ai-weather-assistant
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=

# --- OpenWeatherMap ---
OPENWEATHER_API_KEY=

# --- MongoDB Atlas ---
MONGODB_URI=
MONGODB_DB_NAME=weather_assistant
MONGODB_COLLECTION_DOCUMENTS=documents
MONGODB_COLLECTION_CONVERSATIONS=conversations

# --- App/Agent ---
APP_ENV=dev
DEFAULT_SESSION_ID=local-dev
REQUEST_TIMEOUT_SECONDS=15

